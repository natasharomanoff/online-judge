= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-signin'}) do |f|
  %h2.form-signin-heading Please sign in
  = f.email_field :email, :autofocus => true, :class => 'input-block-level', :placeholder => "Email address"
  = f.password_field :password, :class => 'input-block-level', :placeholder => "Password"
  - if devise_mapping.rememberable?
    %label.checkbox
      = f.check_box :remember_me
      Remember me
  %div= f.submit "Sign in", :class => 'btn btn-primary'

= render "devise/shared/links"