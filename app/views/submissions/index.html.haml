.page-header
  %h1
    = @problem.title
    %small Submissions

%table.table.table-condensed
  %tr
    %th User
    %th Language
    %th
  - @problem.submissions.each do |submission|
    %tr
      %td= submission.user.name
      %td= submission.language.title
      %td.span1
        - if submission.user.id == current_user.id
          = link_to 'View', problem_submission_path(@problem, submission), :class => 'btn btn-info'